extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered.text-center
        thead
          tr
            th.text-center 名字
            th.text-center 时间
            th.text-center 查看
            th.text-center 更新
            th.text-center 删除
        tbody
          each item in users
            tr(class="item-id-"+item._id)
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank",href="/user/"+item._id,class="btn btn-success btn-sm") 查看
              td: a(target="_blank",href="/admin/user/update/"+item._id,class="btn btn-warning btn-sm") 修改
              td
                button.btn.btn-danger.del(type="button",data-id=item._id) 删除
