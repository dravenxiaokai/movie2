extends ../layout

block content
    .container
        .row
            each cat in categories
                .panel.panel-default
                    .panel-heading
                        h4
                            a(href="/results?cat="+cat._id+"&p=0") #{cat.name}
                                span.caret
                    .panel-body
                        if cat.movies && cat.movies.length>0
                            each item in cat.movies
                                .col-lg-2.col-md-3.col-sm-6.col-xs-12
                                    .thumbnail(title=item.title)
                                        a(href="/movie/"+item._id)
                                            if item.poster.indexOf('http') > -1
                                                img(src=item.poster,width="",height="",alt=item.title,title=item.title)
                                            else
                                                img(src="/upload/"+item.poster,width="",height="",alt=item.title,title=item.title)
                                        .caption
                                            h5.text-center.ellipsis #{item.title}
                                            p.text-center: a.btn.btn-primary(href="/movie/"+item._id,role="button") 观看预告片